{
  "extends": "./node_modules/@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/bin/*": ["bin/*"],
      "@/app/*": ["app/*"],
      "@/middlewares/*": ["middlewares/*"],
      "@/services/*": ["services/*"],
      "@/types/*": ["types/*"],
      "@/constants/*": ["constants/*"],
      "@/controllers/*": ["controllers/*"],
      "@/context/*": ["context/*"],
      "@/lib/*": ["lib/*"],
      "@/utility/*": ["utility/*"],
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"],
      "@/src/*": ["src/*"],
      "@/styles/*": ["styles/*"],
      "@/animations/*": ["animations/*"],
      "@/modules/*": ["modules/*"],
    }
  },
  "exclude": ["node_modules", ".next", "out", "test", "**/*.spec.tsx"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
